// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#059669")
  icon      String
  isSystem  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rules        Rule[]
  transactions Transaction[]
}

model Transaction {
  id                  String             @id @default(cuid())
  date                DateTime
  description         String
  amount              Float
  merchant            String?
  notes               String?
  categoryId          String?
  category            Category?          @relation(fields: [categoryId], references: [id])
  transactionImportId String?
  transactionImport   TransactionImport? @relation(fields: [transactionImportId], references: [id])
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([categoryId])
  @@index([date])
  @@index([transactionImportId])
}

model TransactionImport {
  id             String        @id @default(cuid())
  filename       String
  fileType       String // 'csv' or 'json'
  status         String // 'pending', 'processing', 'completed', 'failed', 'partial'
  totalRows      Int
  validRows      Int
  importedCount  Int           @default(0)
  skippedCount   Int           @default(0)
  errorCount     Int           @default(0)
  errorDetails   String? // JSON string of error messages
  columnMapping  String? // JSON string of column mapping
  createdAt      DateTime      @default(now())
  completedAt    DateTime?
  updatedAt      DateTime      @updatedAt
  
  transactions   Transaction[]

  @@index([status])
  @@index([createdAt])
}

model Rule {
  id          String   @id @default(cuid())
  name        String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  field       String // "description" or "merchant"
  operator    String // "contains", "equals", "startsWith"
  value       String
  priority    Int      @default(1000)
  isActive    Boolean  @default(true)
  isSystemRule Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([priority, isActive])
  @@index([isSystemRule])
  @@index([categoryId])
}
